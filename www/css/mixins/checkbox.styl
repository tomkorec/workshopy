	checkbox()
	input[type=checkbox]
		visibility hidden
	.checkbox.login
		width 20px
		height 20px
		display inline
		border-radius 5px
		background rgba(255,255,255,0.2)
		position relative
		label
			display inline-block
			height 20px
			width 20px
			border-radius 5px
			cursor pointer
			position absolute
			top 0
			left 0
			z-index 1
			i
				opacity 0
				user-select()
				-moz-transform scale(.1)
				-webkit-transform scale(.1)
				-o-transform scale(.1)
				-ms-transform scale(.1)
				transform scale(.1)
				transition()
				padding 4px
				color rgba(255,255,255,0.5)
				position relative
	.checkbox.login
		input[type=checkbox]:checked + label
			i
				opacity 1
				-moz-transform scale(1)
				-webkit-transform scale(1)
				-o-transform scale(1)
				-ms-transform scale(1)
				transform scale(1)
				transition()

	.checkbox.main
		float left
		width 40px
		height 40px
		background green
		border-radius 100%
		position relative
		
		label
			display block
			width 36px
			height 36px
			border-radius 100%
			cursor pointer
			position absolute
			top 2px
			left 2px
			z-index 1
			background #fff
			img
				border-radius 100%
				width 36px
				height 36px
				opacity 0
				user-select()
				-moz-transform scale(.1)
				-webkit-transform scale(.1)
				-o-transform scale(.1)
				-ms-transform scale(.1)
				transform scale(.1)
				transition()
			
	.checkbox.main
		input[type=checkbox]:disabled + label
			background #f0f0f0
		input[type=checkbox]:checked + label
			img
				opacity 1
				-moz-transform scale(1)
				-webkit-transform scale(1)
				-o-transform scale(1)
				-ms-transform scale(1)
				transform scale(1)
				transition()