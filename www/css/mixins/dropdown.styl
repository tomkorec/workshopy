dropdown()
    .dropdown-content
        display none
        background-color rgba(255,255,255,1)
        width 210px
        font-size 16px
        line-height 20px
        overflow auto
        float right
        position absolute
        top 70px
        right 0
        dropdown-shadow()
        .mbl
            display none
        +below('m')
            position absolute
            width 100%
            left 0
            .mbl
                display block
    .dropdown-content a 
        padding 12px 16px
        text-decoration none
        display block

    .dropdown a:hover
        background-color #f1f1f1
        color black
    .show
        display block