box-shadow()
	-webkit-box-shadow 0 1px 1px 0 rgba(0,0,0,0.17)
	box-shadow 0 1px 1px 0 rgba(0,0,0,0.17)
transition()
	-webkit-transition all 300ms cubic-bezier(0.66,0.44,0.45,0.61)
	-moz-transition all 300ms cubic-bezier(0.66,0.44,0.45,0.61)
	-ms-transition all 300ms cubic-bezier(0.66,0.44,0.45,0.61)
	-o-transition all 300ms cubic-bezier(0.66,0.44,0.45,0.61)
	transition all 300ms cubic-bezier(0.66,0.44,0.45,0.61)
links()
	a
		text-decoration none
		color shady
		transition()
		-webkit-appearance none
	a:hover
		color darker
	a.btn,input[type=submit]
		background-color green
		-webkit-appearance none
		line-height 40px
		height 40px
		center(300px)
		width 300px
		+below('m')
			width 100%
		display block
		color white
		font-size 15px
		font-weight bold
		text-rendering optimizeLegibility
		font-family 'Open Sans'
		cursor pointer
		outline none
		border none
		transition()
	a.btn:hover,input[type=submit]:hover
		filter brightness(110%)
		transition()
	a.btn:hover,input[type=submit]:active
		filter brightness(90%)
		transition()
	a.btn:hover,input[type=submit]:disabled
		filter grayscale(100%)
		
		
box-sizing()
	-moz-box-sizing border-box
	-webkit-box-sizing border-box
	box-sizing border-box
user-select()
	-webkit-user-select none  /* Chrome all / Safari all */
	-moz-user-select none     /* Firefox all */
	-ms-user-select none      /* IE 10+ */
	user-select none 