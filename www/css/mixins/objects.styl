	animation-iteration-count infinite
login()
	//background-color red

	.loginBox
		center(480px)
		padding-top 40px
		.errors
			margin 0
			-webkit-padding-start 0	
			li
				font-family 'Open Sans'
				display block
				line-height 30px
				text-align center
				list-style-type none
				color #ff9090
				padding 5px 0
				margin 0
				
		//height 640px
		background-color rgba(255,255,255,0.2)
		+below('m')
			background-color rgba(255,255,255,0)
			padding-left 20px
			padding-right 20px
		span.hint
			text-align center
			display block
			font-size 18px
			padding 20px 0
			color white
		img
			center(169px)
			padding-top 40px
		h1
			font-size 35px
			font-weight bold
			font-family 'Open Sans'
			color white
			text-align center
			margin-top 30px
			margin-bottom 70px
		input[type=text],input[type=password],input[type=email]
			center(300px)
			line-height 40px
			font-size 15px
			font-family 'Open Sans'
			color rgba(255,255,255,255,0.5)
			background transparent
			border 1px solid
			border-color rgba(255,255,255,0.5)
			width 300px
			+below('m')
				width 100%
			outline none
			padding-left 10px
			margin-bottom 10px
			transition()
		
		input[type=text]:focus,input[type=password]:focus,input[type=email]:focus
			border-color rgba(255,255,255,1)
			transition()
		::-webkit-input-placeholder
			color rgba(255,255,255,0.5)
		::-moz-input-placeholder
			color rgba(255,255,255,0.5)
		:-ms-input-placeholder
			color rgba(255,255,255,0.5)
		:-moz-input-placeholder
			color rgba(255,255,255,0.5)
		.line-cont
			center(300px)
			padding-bottom 20px
		.errorInput
			border-color rgba(255,144,144,1)
			border 1px dashed
		checkbox()
		.realLabel
			font-size 15px
			color white
			margin-left 15px
		links()
		input[type=submit]
			margin-top 35px
			margin-bottom 20px
		a
			color rgba(255,255,255,0.5)
		a:hover
			color rgba(255,255,255,1)

div.flash
	color black
	background #FFF9D7
	border 1px solid #E2C822
	padding 1em
	margin-top 80px
	position absolute
	width 100%
div.flash.error
	background-color lightRed
	border 1px solid red
div.flash.success
	background-color lightGreen
	border 1px solid green
div.flash.info
	background-color lightBlue
	border 1px solid blue

